{
  "name": "Speakify IELTS Simulator",
  "description": "AI-powered IELTS exam simulation platform",
  "version": "1.0.0",
  "core": {
    "packageManager": "npm",
    "typescript": true,
    "nextjs": {
      "version": "15.1",
      "appDir": true,
      "strictMode": true,
      "turbo": true
    },
    "react": {
      "version": "19.0",
      "strict": true
    },
    "tailwindcss": true,
    "supabase": true,
    "humeai": {
      "version": "latest",
      "features": [
        "empathicVoice",
        "prosody",
        "sentiment"
      ],
      "integration": "@humeai/voice-react"
    }
  },
  "format": {
    "indentSize": 2,
    "singleQuote": true,
    "semi": true,
    "trailingComma": "es5",
    "printWidth": 80,
    "arrowParens": "always"
  },
  "linting": {
    "eslint": {
      "version": "9.0",
      "strict": true
    },
    "rules": {
      "noUnusedVars": "warn",
      "noExplicitAny": "warn",
      "noConsole": "warn"
    }
  },
  "folders": {
    "components": {
      "path": "src/components",
      "structure": {
        "ui": "Reusable UI components from shadcn/ui",
        "exam": {
          "speaking": {
            "chat": "Speaking exam chat interface",
            "controls": "Audio recording and playback controls",
            "messages": "Question and response messages",
            "start-call": "Initial exam setup and configuration",
            "speaking-parts": "Different parts of the speaking exam"
          },
          "shared": "Shared exam components"
        },
        "layout": "Layout components",
        "shared": "Shared components"
      }
    },
    "pages": {
      "path": "src/app",
      "structure": {
        "exam": "Exam module pages",
        "auth": "Authentication pages",
        "dashboard": "User dashboard"
      }
    },
    "lib": {
      "path": "src/lib",
      "structure": {
        "utils": "Utility functions",
        "supabase": "Supabase client",
        "hume": {
          "config": "Hume AI configuration",
          "examiner": "AI examiner implementation"
        }
      }
    },
    "styles": "src/styles",
    "utils": "src/utils",
    "types": "src/types",
    "hooks": "src/hooks",
    "constants": "src/constants",
    "services": "src/services"
  },
  "naming": {
    "components": {
      "style": "PascalCase",
      "examples": [
        "ExamCard",
        "SpeakingTest",
        "ReadingSection"
      ]
    },
    "utils": {
      "style": "camelCase",
      "examples": [
        "formatTime",
        "calculateScore",
        "validateAnswer"
      ]
    },
    "hooks": {
      "style": "useNounVerb",
      "examples": [
        "useExamState",
        "useAudioRecorder",
        "useTimer",
        "useQuestionMessages"
      ]
    },
    "handlers": {
      "style": "handleEvent",
      "examples": [
        "handleSubmit",
        "handleRecordStart",
        "handleAnswerSelect"
      ]
    }
  },
  "imports": {
    "style": "aliases",
    "baseUrl": "src",
    "paths": {
      "@/*": [
        "*"
      ],
      "@/components/*": [
        "components/*"
      ],
      "@/lib/*": [
        "lib/*"
      ],
      "@/hooks/*": [
        "hooks/*"
      ],
      "@/utils/*": [
        "utils/*"
      ]
    }
  },
  "components": {
    "style": "functional",
    "propsInterface": true,
    "defaultExport": false,
    "structure": {
      "imports": "top",
      "interface": "after-imports",
      "component": "after-interface",
      "styles": "bottom"
    }
  },
  "dependencies": {
    "ui": {
      "shadcn": true,
      "radix": true,
      "tailwind": true,
      "framerMotion": true
    },
    "forms": {
      "reactHookForm": true,
      "zod": true
    },
    "state": {
      "reactHooks": true,
      "zustand": true
    },
    "ai": {
      "humeai": {
        "packages": [
          "@humeai/voice-react"
        ],
        "features": [
          "empathicVoice",
          "prosody"
        ]
      }
    },
    "icons": {
      "lucide": true
    }
  }
}
